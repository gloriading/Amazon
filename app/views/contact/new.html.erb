<div class="container mt-3">

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <img class="card-img-top"
           src="https://images.pexels.com/photos/688017/pexels-photo-688017.jpeg?w=940&h=650&auto=compress&cs=tinysrgb"
           alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">Contact us:</h5>
        <p>
          <i class="fa fa-envelope-o" aria-hidden="true"></i>
          info.amazon@best.com
        </p>
        <p>
        <i class="fa fa-phone" aria-hidden="true"></i>
          +1-604-555-8888
        </p>
      </div>
    </div>
  </div>

  <div class="col-sm-6">
    <%= form_tag contact_submit_path do %>
      <div class="form-group p-2">
        <%= label_tag :name,nil, class: "font-weight-bold text-right"%>
        <%= text_field_tag :name, nil, class: "form-control", required: "true" %>
      </div>
      <div class="form-group p-2">
        <%= label_tag :email,nil, class: "font-weight-bold text-right" %>
        <%= email_field_tag :email, nil, class: "form-control" %>
      </div>
      <div class="form-group p-2">
        <%= label_tag :message,nil, class: "font-weight-bold text-right" %>
        <%= text_area_tag :message, nil, class: "form-control",rows: "5", required: "required" %>
      </div>
        <%= submit_tag "Submit", class:"btn btn-outline-dark float-right" %>
    <% end %>

  </div>
</div>


</div>
