<div class="container">
  <h3 class="mt-3">Contact Us:</h3>
  <%= form_tag contact_submit_path do %>
    <div class="form-group row p-2 bg-info rounded">
      <%= label_tag :name,nil, class: "font-weight-bold text-right col-sm-2"%>
      <%= text_field_tag :name, nil, class: "col-sm-10 form-control", required: "true" %>
    </div>
    <div class="form-group row p-2 bg-info rounded">
      <%= label_tag :email,nil, class: "font-weight-bold text-right col-sm-2" %>
      <%= email_field_tag :email, nil, class: "col-sm-10 form-control" %>
    </div>
    <div class="form-group row p-2 bg-info rounded">
      <%= label_tag :message,nil, class: "font-weight-bold text-right col-sm-2" %>
      <%= text_area_tag :message, nil, class: "col-sm-10 form-control",required: "required" %>
    </div>
      <%= submit_tag "Submit", class:"btn btn-info float-right" %>
  <% end %>

</div>
