
<div class="container mt-3 p-3 w-75" style="box-shadow: 3px 5px 20px;">
  <h4 class="mt-3">Welcome Back! Sign In:</h4>

  <%= form_for :session, url: session_path do |f| %>

    <div>
      <%= f.email_field :email,
        class: "form-control mb-1",
        placeholder: "Email" %>
    </div>
    <div>
      <%= f.password_field :password,
        class: "form-control mb-1",
        placeholder: "Password" %>
    </div>
    <%= f.submit 'Sign In', class: "btn btn-primary btn-sm"  %>
  <% end %>

</div>
