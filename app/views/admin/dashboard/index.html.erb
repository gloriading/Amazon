<h1>Admin Dashboard</h1>

<ul class="list-group">
  <li class="list-group-item">
    Number of products:
    <span class="badge badge-info"><%= @number_of_products %></span>
  </li>
  <li class="list-group-item">
    Number of reviews:
    <span class="badge badge-info"><%= @number_of_reviews %></span>
  </li>
  <li class="list-group-item">
    Number of users:
    <span class="badge badge-info"><%= @number_of_users %></span>
  </li>
</ul>
<hr>
<br>

<table class="table">
  <tbody>
    <tr>
      <th>Product ID</th>
      <th>Product Title</th>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to product.title, product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<table class="table">
  <tbody>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>

    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>

  </tbody>

</table>
